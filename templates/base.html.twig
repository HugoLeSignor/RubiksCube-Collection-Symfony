<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Rubik's Cube Collection{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo-rubiks.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <div class="container">
                <a href="{{ path('app_home') }}" class="logo">
                    <img src="{{ asset('images/logo-rubiks.svg') }}" alt="Rubik's Cube Logo" class="logo-image">
                    Rubik's Collection
                </a>
                <ul>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_rubiks_cube_index') }}">Galerie</a></li>
                    <li><a href="{{ path('app_contact') }}">Contact</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_collection_index') }}">Ma Collection</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin') }}" class="btn btn-admin">‚öôÔ∏è Admin</a></li>
                        {% endif %}
                        <li><span class="text-medium font-weight-bold">üë§ {{ app.user.username }}</span></li>
                        <li>
                            <form method="post" action="{{ path('app_logout') }}" class="btn-inline-form">
                                <button type="submit" class="btn btn-danger">D√©connexion</button>
                            </form>
                        </li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a></li>
                        <li><a href="{{ path('app_register') }}" class="btn btn-success">Inscription</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <main>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="container">
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
            
            {% block body %}{% endblock %}
        </main>

        <footer>
            <div class="footer-content">
                <p>&copy; {{ "now"|date("Y") }} Rubik's Cube Collection - Tous droits r√©serv√©s</p>
                <div class="footer-links">
                    <a href="{{ path('app_home') }}">Accueil</a>
                    <a href="{{ path('app_rubiks_cube_index') }}">Galerie</a>
                    <a href="{{ path('app_contact') }}">Contact</a>
                </div>
            </div>
        </footer>
    </body>
</html>
