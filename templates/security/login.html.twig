{% extends 'base.html.twig' %}

{% block title %}Connexion - Rubik's Cube Collection{% endblock %}

{% block body %}
<div class="container">
    <div class="max-width-500">
        <div class="card">
            <h1 class="text-center text-primary mb-4">üîê Connexion</h1>

            {% if error %}
                <div class="alert alert-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="email" id="username" name="_username" class="form-control" value="{{ last_username }}" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-primary form-full-width">
                    Se connecter
                </button>
            </form>

            <div class="text-center mt-2">
                <p class="text-gray">Pas encore de compte ? 
                    <a href="{{ path('app_register') }}" class="text-primary font-weight-bold">S'inscrire</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
